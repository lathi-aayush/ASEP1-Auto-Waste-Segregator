</form>
<script>
   
    document.addEventListener("DOMContentLoaded", function() {
        let rows = document.querySelectorAll("tbody tr");
        rows.forEach((row, index) => {
            row.querySelector(".rank").textContent = index + 1;
        });
    });

</script>
</body>
</html>
